<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/eating_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="しょほうさん（仮）"
        android:textSize="24dp"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/title"
        android:layout_width="310dp"
        android:layout_height="96dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/notify_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="64dp"
            android:textSize="26dp"
            android:gravity="center_vertical"
            android:text="次のお薬は・・・です"/>

        <Button
            android:id="@+id/schedule_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#534C6E"
            android:textColor="@android:color/white"
            android:text="お薬スケジュールが見たい"/>
        <Button
            android:id="@+id/drug_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#534C6E"
            android:textColor="@android:color/white"
            android:text="お薬の一覧が見たい"/>
        <Button
            android:id="@+id/drug_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#534C6E"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:text="お薬を追加する"/>

        <Button
            android:id="@+id/photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#534C6E"
            android:textColor="@android:color/white"
            android:text="お薬を追加する"/>

        <Button
            android:id="@+id/meat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#534C6E"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="今から食事"/>

    </LinearLayout>

</RelativeLayout>